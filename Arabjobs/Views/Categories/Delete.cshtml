@model Arabjobs.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>الحذف</h2>

<h3>هل انت متاكد من انك تريد حذف هذا النوع</h3>
<div>
    <h4>تفاصيل النوع</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
     
        <dd>
            @Html.DisplayFor(x => x.CategoryName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
       
        <dd>
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
      
        
        

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div >
            <input type="submit" value="حذف" class="btn btn-danger col-md-2" style="margin-right:50px"/> 
           
        </div>
        <div style="margin-left: 50px">
      
            <input type="button" value="العودة الى القائمة" onclick="location.href ='@Url.Action("Index", "Categories")'" class="btn btn-success" />
       
            </div>
    }
</div>
